pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        ECR_REGISTRY = 'upes-colab'
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
        SERVICE_NAME = 'back-end'
        TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Push Image') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'AlmostAdminAWS'
                ]]) {
                    dir('UPES_CONNECT/micro-backend/'){
                        sh "ls"
                        sh "docker-compose -f ${DOCKER_COMPOSE_FILE} build"
                        sh "docker tag ${SERVICE_NAME}:${TAG} ${ECR_REGISTRY}/${SERVICE_NAME}:${TAG}"
                        sh "docker push ${ECR_REGISTRY}/${SERVICE_NAME}:${TAG}"
                    }
                }
            }
        }
    }
}
